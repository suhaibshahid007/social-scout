<!DOCTYPE html>
<html>
  <head>
    <title>SocialScout</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">

      <div class="container">

        <div class="navbar-header">
          <%= link_to "Social Scout", root_path, :class => 'navbar-brand' %>
        </div>

        <ul class="nav navbar-nav">
          <% if !user_signed_in? %>
          <li><%=link_to "Signup",  new_user_registration_path %></li>
          <% end %>
          <% if user_signed_in? %>
          <li><%=link_to "Signout", destroy_user_session_path , method: :delete %></li>
          <% else %>
          <li><%=link_to "Login", new_user_session_path %></li>
          <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to "New Post", new_post_path %></li>
          <% end %>
        </ul>

      </div>

    </nav>

    <div style="display: flex; justify-content: center;">
      <% if notice %>
        <p class="text-center alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
         <p class="text-center alert alert-danger"><%= alert %></p>
      <% end %>
    </div>

    <br/>
    <div class ="container">
      <%= yield %>
    </div>

  </body>
</html>
